<div class="side_bar_word_point_block">
  <div class="side_bar_word_point">
    <% if user_signed_in? %>
      Word Point：<%= @word_point %>
    <% elsif %>
      <%= @word_point %>
    <% end %>
  </div>
</div>

<div class="side_bar_block">
  <label class="side_bar_title_header">あなたの"ワード"</label>
  <div class="side_bar_contents">
    <% if user_signed_in? %>
      <%= link_to '投稿ページ', new_user_word_path(current_user.id), class: "side_bar_content" %>
      <%= link_to '投稿済のワード一覧', user_words_path(current_user.id), class: "side_bar_content" %>
    <% elsif %>
      <%= link_to '投稿ページ', user_session_path, class: "side_bar_content" %>
      <%= link_to '投稿済のワード一覧', user_session_path, class: "side_bar_content" %>
    <% end %>
  </div>
</div>

